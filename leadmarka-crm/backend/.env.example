# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# JWT Secret
JWT_SECRET=your_jwt_secret_key_min_32_chars

# Email Configuration (Resend) — reminders, alerts, notifications, password reset
RESEND_API_KEY=erdfdffdfdfddfgegfgrtgegergergergegegegergee
FROM_EMAIL=info@update.leadmarka.co.zw

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS and password reset links). In production, set to e.g. https://app.leadmarka.co.zw
FRONTEND_URL=http://localhost:3000

# Feature flags
# Team Inbox (workspace collaboration). Set to true to show the Inbox tab and team features.
TEAM_INBOX_ENABLED=false

# Cron (optional). Required if you trigger reminders via GET /api/cron/reminders (e.g. cron-job.org).
# Use a long random string; same value in Vercel env and in the external cron job.
CRON_SECRET=

# Admin analytics (optional). Protect GET /api/admin/analytics
# Preferred: a long random string and call with either:
# - Authorization: Bearer <ADMIN_API_KEY>
# - X-Admin-Key: <ADMIN_API_KEY>
ADMIN_API_KEY=
#
# Alternative: allowlist admin emails (requires a valid JWT via Authorization: Bearer <token>)
# Comma-separated: ADMIN_EMAILS=you@example.com,other@example.com
ADMIN_EMAILS=

# Paynow (EcoCash) billing — required for LeadMarka Pro subscriptions
# Get credentials from https://www.paynow.co.zw/ → Receive Payment Links → 3rd Party Site
# PAYNOW_MODE=live uses real EcoCash numbers.
# PAYNOW_MODE=test enables Paynow sandbox rules (EcoCash numbers must be one of:
# 0771111111 success, 0772222222 delayed success, 0773333333 cancelled, 0774444444 insufficient balance)

PAYNOW_INTEGRATION_ID=
PAYNOW_INTEGRATION_KEY=
# Required in PAYNOW_MODE=test: must match one of the merchant account login emails being tested.
PAYNOW_TEST_AUTH_EMAIL=
# Public backend base URL (for Paynow result callback). e.g. https://api.leadmarka.co.zw
PAYNOW_RESULT_URL_BASE=
# Frontend base URL (for Paynow return redirect). Falls back to FRONTEND_URL if not set.
PAYNOW_RETURN_URL_BASE=

# Monitoring (optional)
# Backend error tracking (Sentry)
SENTRY_DSN=
