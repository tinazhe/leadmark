# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# JWT Secret
JWT_SECRET=your_jwt_secret_key_min_32_chars

# Email Configuration (Resend) â€” reminders, alerts, notifications, password reset
RESEND_API_KEY=erdfdffdfdfddfgegfgrtgegergergergegegegergee
FROM_EMAIL=reminder@leadmarka.co.zw

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS and password reset links). In production, set to e.g. https://app.leadmarka.co.zw
FRONTEND_URL=http://localhost:3000

# Cron (optional). Required if you trigger reminders via GET /api/cron/reminders (e.g. cron-job.org).
# Use a long random string; same value in Vercel env and in the external cron job.
CRON_SECRET=

# Admin analytics (optional). Protect GET /api/admin/analytics
# Preferred: a long random string and call with either:
# - Authorization: Bearer <ADMIN_API_KEY>
# - X-Admin-Key: <ADMIN_API_KEY>
ADMIN_API_KEY=
#
# Alternative: allowlist admin emails (requires a valid JWT via Authorization: Bearer <token>)
# Comma-separated: ADMIN_EMAILS=you@example.com,other@example.com
ADMIN_EMAILS=

# Monitoring (optional)
# Backend error tracking (Sentry)
SENTRY_DSN=
